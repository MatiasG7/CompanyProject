@{
    ViewData["Title"] = "Estado de Subtes";
}

<h1>
    Estado de Subtes
</h1>

<div id="panel-subte">
    <img hidden id="loading-image" src='/images/loading.gif'/>
    <table id="tabla-subte">
        <thead>
            <th>Linea</th>
            <th>Estado</th>
            <th>Detalles</th>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section scripts
{
    <script>
    $(document).ready(function(){
        $('#loading-image').show();
        $.ajax({url: "/Subte/ObtenerEstado", success: function(result){
            $.each(result,function(i, item){
                var row = "<tr><td>"+ i + "</td><td>" + item.status + "</td><td>" + item.text + "</td></tr>"; 

                $("#tabla-subte tbody").append(row);
            });
            
        },
      complete: function(){
        $('#loading-image').hide("slow");
      }});
    });
    </script>
}